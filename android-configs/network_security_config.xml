<?xml version="1.0" encoding="utf-8"?>
<!--
  Configuração de Segurança de Rede para Android
  
  INSTRUÇÕES:
  1. Copie este arquivo para: android/app/src/main/res/xml/network_security_config.xml
  2. Adicione a referência no AndroidManifest.xml
  
  Este arquivo permite conexões WebSocket WS (cleartext) para desenvolvimento.
  Para produção, use apenas WSS (WebSocket Secure).
-->
<network-security-config>
    
    <!-- Configuração para DESENVOLVIMENTO -->
    <!-- Permitir cleartext (ws://) para IPs específicos -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- IP VPN do servidor -->
        <domain includeSubdomains="true">10.200.0.184</domain>
        
        <!-- Toda a rede local 192.168.x.x -->
        <domain includeSubdomains="true">192.168.1.1</domain>
        <domain includeSubdomains="true">192.168.1.100</domain>
        <domain includeSubdomains="true">192.168.0.1</domain>
        
        <!-- Localhost -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- Emulador Android -->
    </domain-config>
    
    <!-- Configuração BASE (PRODUÇÃO) -->
    <!-- Por padrão, bloquear cleartext (força HTTPS/WSS) -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Confiar em certificados do sistema -->
            <certificates src="system" />
            <!-- Descomentar linha abaixo se usar certificados personalizados -->
            <!-- <certificates src="user" /> -->
        </trust-anchors>
    </base-config>
    
    <!-- DEBUG CONFIG (descomente apenas para debug extremo) -->
    <!--
    <debug-overrides>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </debug-overrides>
    -->
    
</network-security-config>

